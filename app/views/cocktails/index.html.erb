<p id="notice"><%= notice %></p>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/cocktails">Cocktail.io</a>
  <%= link_to "Add Cocktail", new_cocktail_path,  class: "btn btn-primary ml-5 mt-1"  %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= simple_form_for :search, url: cocktails_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</nav>
<div class="container mt-3">
  <div class="row col-12">
    <h1>Get your coder and nerd cocktail today! </h1>
  </div>
  <div class="row col-12">
    <p><%= @cocktails.length %> results:</p>
  </div>
  <div class="row col-12">
    <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card" id="cocktail-card" style="width: 18rem;">
              <img class="card-img-top" src="https://loremflickr.com/350/180" alt="Card image">
              <div class="card-body">
                <h5 class="card-title"><%= cocktail.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
