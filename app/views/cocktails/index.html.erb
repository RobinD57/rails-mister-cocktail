<p id="notice"><%= notice %></p>

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <a class="navbar-brand" href="/">Cocktail.io</a>
  <%= link_to "Add Cocktail", new_cocktail_path,  class: "btn btn-primary ml-5 mt-1"  %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</nav>
<div class="container mt-3">
  <div class="row col-12">
    <h1>Get your coder and nerd cocktail today! </h1>
  </div>
  <div class="row col-12">
    <p><%= @cocktails.length %> results:</p>
  </div>
  <div class="row col-12">
    <% @cocktails.each do |cocktail| %>
        <div class="col-4 mb-3">
          <%= link_to cocktail_path(cocktail) do %>
            <div data-aos="fade-up-left" class="card" id="cocktail-card" style="width: 18rem;">
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= cocktail.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
