<p id="notice"><%= notice %></p>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/cocktails">Cocktail.io</a>
  <%= link_to "Add Cocktail", new_cocktail_path,  class: "btn btn-primary ml-5 mt-1"  %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= simple_form_for :search, url: cocktails_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</nav>
<div class="map" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= @cocktail.name %></h5>
          <p class="card-text"> placeholder</p>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">A bite more about this cocktail</h5>
          <p class="card-text"><%=@cocktail.name %></p>
        </div>
      </div>
    </div>
  </div>
</div>


<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<p>
  <strong>Doses:</strong>
  <% @cocktail.doses.each do |dose| %>
    <br>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Destroy dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
  <% end %>
</p>

<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add new recipe!', new_cocktail_dose_path(@cocktail) %>

